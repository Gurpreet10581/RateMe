@model IEnumerable<RateIt.Models.Music>

@{
    ViewBag.Title = "Index";
}

<h2>All Music</h2>

<p>
    @using (Html.BeginForm("Index", "MusicSearch", FormMethod.Get))
    {

        <b> Search By:</b>@Html.RadioButton("searchBy", "ArtistName", true) <text>  Artist </text>
        @Html.RadioButton("searchBy", "GenreOfMusic") <text> Genre  </text> <br />
        @Html.TextBox("search") <input type="submit" value="Search" />
    }
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.ArtistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateRelease)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GenreOfMusic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfMusic)
        </th>

        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="5">Your search does not exist </td>
        </tr>
    }
    else
    {

        foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.ArtistName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRelease)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreOfMusic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeOfMusic)
                </td>

                <td>
                    @Html.ActionLink("Details", "Details", "Music", new { id = item.MusicId }, null) |
                </td>
            </tr>
        }
    }

</table>
